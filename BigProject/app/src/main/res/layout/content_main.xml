<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/cancer_btn"
            android:layout_margin="2dp"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:contentDescription="Cancel"
            android:src="@drawable/cancer" />

        <ImageButton
            android:id="@+id/new_btn"
            android:layout_margin="2dp"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:contentDescription="@string/start_now"
            android:src="@drawable/new_pic" />

        <ImageButton
            android:id="@+id/draw_btn"
            android:layout_margin="2dp"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:contentDescription="@string/brush"
            android:src="@drawable/brush" />

        <ImageButton
            android:id="@+id/erase_btn"
            android:layout_margin="2dp"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:contentDescription="Erase"
            android:src="@drawable/eraser" />

        <ImageButton
            android:id="@+id/save_btn"
            android:layout_margin="2dp"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:contentDescription="@string/save"
            android:src="@drawable/save" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:orientation="horizontal">
        <EditText
            android:layout_gravity="center"
            android:id="@+id/editName"
            android:maxLength="20"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:background="#ffffff"
            android:hint="Picture Name"
            android:textSize="20dp"
            />
    </LinearLayout>
    <com.example.bigproject.DrawingView
        android:id="@+id/drawing"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:layout_width="fill_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:id="@+id/paint_color"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_margin="2dp"
            android:background="#FF660000"
            android:contentDescription="@string/paint"
            android:onClick="paintClicked"
            android:src="@drawable/paint"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tag="#FF660000"/>
        <ImageButton
            android:layout_margin="2dp"
            android:background="#8a2be2"
            android:contentDescription="@string/paint"
            android:onClick="paintClicked"
            android:src="@drawable/paint"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tag="#8a2be2"/>
        <ImageButton
            android:layout_margin="2dp"
            android:background="#0000ff"
            android:contentDescription="@string/paint"
            android:onClick="paintClicked"
            android:src="@drawable/paint"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tag="#0000ff"/>
        <ImageButton
            android:layout_margin="2dp"
            android:background="#00ff7f"
            android:contentDescription="@string/paint"
            android:onClick="paintClicked"
            android:src="@drawable/paint"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tag="#00ff7f"/>
        <ImageButton
             android:layout_margin="2dp"
            android:background="#ff1493"
            android:contentDescription="@string/paint"
            android:onClick="paintClicked"
            android:src="@drawable/paint"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tag="#ff1493"/>
        <ImageButton
            android:layout_margin="2dp"
            android:background="#FFFF0000"
            android:contentDescription="@string/paint"
            android:onClick="paintClicked"
            android:src="@drawable/paint"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tag="#FFFF0000"/>
        <ImageButton
            android:layout_margin="2dp"
            android:background="#FFFF6600"
            android:contentDescription="@string/paint"
            android:onClick="paintClicked"
            android:src="@drawable/paint"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tag="#FFFF6600"/>
        <ImageButton
            android:layout_margin="2dp"
            android:background="#FFFF6666"
            android:contentDescription="@string/paint"
            android:onClick="paintClicked"
            android:src="@drawable/paint"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tag="#FFFF6666"/>
    </LinearLayout>

</LinearLayout>
